<UserControl x:Class="Projekt_Abschluss.Views.UserListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt_Abschluss.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
        <DataGrid x:Name="UserList_DataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="User" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Projects" Binding="{Binding Projects}"/>
                <!--<DataGridCheckBoxColumn Header="Admin" Binding="{Binding IsAdmin}"/>-->
               <DataGridTemplateColumn Header="Is Admin">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <CheckBox Name="AdminCheckbox" Checked="AdminCheckbox_Checked" Unchecked="AdminCheckbox_Unchecked"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</UserControl>
